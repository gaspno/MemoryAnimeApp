<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/levelTunnelId"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="15dp"
    android:background="@drawable/gradiente4"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/LevelTextId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        android:background="@drawable/gradiente"
        android:backgroundTintMode="add"
        android:drawableTintMode="screen"

        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"

        android:textAlignment="center"
        android:textColor="@color/spinnertextcolor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RatingBar
        android:id="@+id/ratingBarIdLevel"

        style="@style/ImageRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiente"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:progressBackgroundTint="@color/textmenucolor"
        android:progressDrawable="@drawable/rlay"
        android:progressTint="#000CEC"
        android:rating="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/LevelTextId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBarIdLevel"
        app:srcCompat="@drawable/darkness" />
</androidx.constraintlayout.widget.ConstraintLayout>